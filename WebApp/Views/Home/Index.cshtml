@model WebApp.Models.Order

@{
    ViewData["Title"] = "Home Page";
}

<div class="bform py-5" style="margin-left: 35%">
<div class="row">
    <div class="container">
        <div class="col-lg-6 align-justify-center pr-4 pl-0 contact-form">
            <div class="">
                <h2 class="mb-3 font-weight-light">Введите данные:</h2>

                <form class="mt-3" method="post" asp-controller="Home" asp-action="Create">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="col-lg-12" style="margin-top: 5%">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Город отправителя" asp-for="sendersCity">
                                <span asp-validation-for="sendersCity"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Адрес отправителя" asp-for="sendersAdress">
                                <span asp-validation-for="sendersAdress"></span>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Город получателя" asp-for="recipientsCity">
                                <span asp-validation-for="recipientsCity"></span>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Адрес получателя" asp-for="recipientsAdress">
                                <span asp-validation-for="recipientsAdress"></span>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Вес груза, кг" asp-for="Weight">
                                <span asp-validation-for="Weight"></span>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <input class="form-control" type="date" placeholder="Дата забора груза" asp-for="arrivalDate">
                                <span asp-validation-for="arrivalDate"></span>
                            </div>
                        </div>


                        <div class="col-lg-12" style="margin-top: 5%">
                            <button type="submit" class="btn btn-outline-dark"><span>Создать заказ</span></button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6 right-image pl-3" style="background-image:url(https://bootstraptema.ru/images/demo/600x600/demo1.jpeg);">
    </div>
</div>
</div>

